{% extends 'Template.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    {{ ROLE }}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>

            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ user.mail }}</td>
            </tr>
            <tr>
                <th>DateNaissance</th>
                <td>{{ user.DateNaissance ? user.DateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>NumeroTel</th>
                <td>{{ user.NumeroTel }}</td>
            </tr>
            <tr>
                <th>Education</th>
                <td>{{ user.Education }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ user.Niveau }}</td>
            </tr>
            <tr>
                <th>Diplome</th>
                <td>{{ user.diplome }}</td>
            </tr>
        </tbody>
    </table>

    {% if ROLE==1 %}
        <a href="{{ path('app_admin_index') }}">back to list</a>
    {% endif %}

    {% if ROLE == 2 %}
        <a href="{{ path('app_student_index') }}">back to list</a>
    {% endif %}

    {% if ROLE == 3 %}
        <a href="{{ path('app_trainer_index') }}">back to list</a>
    {% endif %}


    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
